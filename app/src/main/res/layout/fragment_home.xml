<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="homeviewmodel"
            type="com.jgeig001.kigga.viewmodel.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/like_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="30dp"
            android:onClick="@{() -> homeviewmodel.onLike()}"
            android:text="###"
            app:layout_constraintBottom_toTopOf="@+id/username"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/username"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="47dp"
            android:padding="0pt"
            android:fontFamily="@font/soccer_league"
            android:gravity="center"
            android:text="@{homeviewmodel.username}"
            android:textAllCaps="false"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/points_curSeason"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/like_button" />

        <TextView
            android:id="@+id/points_curSeason"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="448dp"
            android:padding="0pt"
            android:fontFamily="@font/soccer_league"
            android:gravity="center"
            android:text="@{@string/point_cur_season(homeviewmodel.points_curSeason)}"
            android:textAllCaps="false"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/username" />

        <TextView
            android:id="@+id/points_allSeasons"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="448dp"
            android:padding="0pt"
            android:fontFamily="@font/soccer_league"
            android:gravity="center"
            android:text="@{homeviewmodel.points_allSeasons}"
            android:textAllCaps="false"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>