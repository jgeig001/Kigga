<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="ligaviewmodel"
            type="com.jgeig001.kigga.viewmodel.LigaViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/match_layout"
        android:layout_width="386dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="#06F506"
        android:orientation="vertical"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/home_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp" />

            <TextView
                android:id="@+id/result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp" />

            <TextView
                android:id="@+id/away_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp" />

            <TextView
                android:id="@+id/kickoff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="386dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/home_plus"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="4dp"
                android:text="⬆︎︎" />

            <Button
                android:id="@+id/home_minus"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="4dp"
                android:text="⬇" />

            <TextView
                android:id="@+id/result_bet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp" />

            <Button
                android:id="@+id/away_plus"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="4dp"
                android:text="⬆" />

            <Button
                android:id="@+id/away_minus"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="4dp"
                android:text="⬇" />

        </LinearLayout>

    </LinearLayout>

</layout>